<Page x:Class="Session_1.Frames.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session_1.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontFamily="{StaticResource MainFont}" VerticalAlignment="Center" Background="#FF14F365" TextAlignment="Justify" FontSize="42" MaxWidth="500">
                Добро пожаловать
                
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="Start" Style="{StaticResource MainButton}">Начать</Button>
            <Button x:Name="Exit" Style="{StaticResource MainButton}">Выход</Button>
        </StackPanel>

    </Grid>
</Page>
